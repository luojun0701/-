/**主题色*/
.me-top-bg {
  width: 100%;
  height: 450rpx;
  z-index: -1;
}
.me-top-bg-img {
  width: 100%;
  height: 100%;
}
.me-top-info {
  margin: 0 30rpx;
  margin-top: -230rpx;
  z-index: 1;
  display: flex;
  align-items: center;
  color: #ffffff;
}
.me-top-info-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}
.me-top-info .nickname {
  font-size: 38rpx;
  margin-bottom: 7rpx;
}
.dt-container {
  width: 100%;
  height: calc(100vh - 400rpx);
  background-color: #ffffff;
  border-radius: 30rpx;
}
.dt-container scroll-view {
  height: calc(100vh - 400rpx - 88rpx);
}