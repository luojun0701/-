/**主题色*/
.me-top-bg {
  width: 100%;
  height: 450rpx;
  z-index: -1;
}
.me-top-bg-img {
  width: 100%;
  height: 100%;
}
.me-top-info {
  margin: 0 30rpx;
  margin-top: -230rpx;
  z-index: 1;
  display: flex;
  align-items: center;
  color: #ffffff;
}
.me-top-info-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}
.me-top-info .nickname {
  font-size: 38rpx;
  margin-bottom: 7rpx;
}
.count-item {
  text-align: center;
}
.count-item .num {
  font-weight: bold;
}
.count-item .title {
  color: #00000080;
  margin-top: 8rpx;
}
.me-task-header,
.me-task .more {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.me-task-header .more,
.me-task .more .more {
  color: #00000080;
}
.me-task-header .title,
.me-task .more .title {
  font-weight: bold;
}