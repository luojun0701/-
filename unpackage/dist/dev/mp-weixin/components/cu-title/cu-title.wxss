/**主题色*/
.cu-title {
  width: 690rpx;
  height: 88rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cu-title-left text {
  font-weight: bold;
  position: relative;
}
.cu-title-left text::after {
  content: "";
  display: inline-block;
  width: 60rpx;
  height: 15rpx;
  background: #3d7eff;
  opacity: 0.5;
  z-index: 1;
  position: absolute;
  bottom: 0;
  left: 0;
}
.cu-title-right {
  display: flex;
  align-items: center;
}
.cu-title-right text {
  font-size: 28rpx;
  color: #7d7e80;
}